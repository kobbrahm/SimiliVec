<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimiliVec.MAUI.MainPage"
             Title="Vector Search">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
            Text="Search Documents" 
            FontSize="24" 
            FontAttributes="Bold"
            HorizontalOptions="Center" />
        
        <Entry 
            x:Name="SearchEntry" 
            Placeholder="Enter search query..." 
            FontSize="16" />
        
        <Button 
            Text="Search" 
            Clicked="OnSearchClicked"
            Padding="10"
            FontSize="16" />
        
        <Label x:Name="ResultsLabel" Text="Results:" FontAttributes="Bold" FontSize="16" />
        
        <CollectionView ItemsSource="{Binding SearchResults}" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="15" Spacing="8" BorderStroke="#E0E0E0">
                        <Label 
                            Text="{Binding Id}" 
                            FontAttributes="Bold" 
                            FontSize="14"
                            LineBreakMode="TailTruncation" />
                        <Label 
                            Text="{Binding Content}" 
                            LineBreakMode="WordWrap" 
                            FontSize="12"
                            MaxLines="3" />
                        <Label 
                            Text="{Binding Distance, StringFormat='Similarity: {0:F4}'}" 
                            FontSize="11"
                            TextColor="#666666" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
